server {
	listen 443 ssl;
	server_name b.hr.dmerej.info;
	ssl_certificate /etc/letsencrypt/live/b.hr.dmerej.info/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/b.hr.dmerej.info/privkey.pem;
	root /srv/hr/static/b ;
	index index.html;

	location / {
		try_files $uri @rewrites;
	}

        location @rewrites {
            rewrite ^(.+)$ /index.html last;
        }

	location /api {
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
          proxy_set_header X-Forwarded-Proto $scheme;
          proxy_set_header Host $http_host;
          proxy_redirect off;
          proxy_pass http://api-b;
	}
}
